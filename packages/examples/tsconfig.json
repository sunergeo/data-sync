{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "outDir": "dist",
        "lib": ["ES2020", "DOM"],
        "baseUrl": ".",
        "paths": {
            "@sunergeo/data-sync-server": ["../data-sync-server/src"],
            "@sunergeo/data-sync-client": ["../data-sync-client/src"],
            "@sunergeo/data-sync-storage-adapters": ["../storage-adapters/src"]
        },
        "typeRoots": ["../../node_modules/@types", "node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
